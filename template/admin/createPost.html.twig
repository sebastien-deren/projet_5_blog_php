{% extends "layout.html.twig" %}

{% block content %}
	{% if error %}
		<h1>{{ error }}</h1>
		<p>vous avez mal renseigner un champ veillez a bien remplir tout les champs</p>
	{% elseif message %}
		<h1>{{message}}</h1>
		<h2>{{post.title}}</h2>
		<p>
			voulez vous créer un nouveau post</p>
	{% endif %}


	<div class="container">

		<div class="card o-hidden border-0 shadow-lg my-5 rounded-4">
			<div class="card-body p-0">
				<div class="row">
					<div class="col">
						<div class="p-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-4">Create a new Post!</h1>
							</div>
							<form action="" method="post" class="form-post">
								<input type="hidden" name="token" value="{{ csrfToken }}">
								<div class="form-group mb-3 ">
									<input class="form-control col-md" type="text" name="title" id="title" required placeholder="entrez le titre!">
								</div>
								<div class="form-group mb-3">
									<input class="form-control col-md" type="text" name="excerpt" id="excerpt" length="255" placeholder="entrez un résumé de l'article">
								</div>
								<div class="form-group mb-3">
									<label class="form-label col-md-3" for"content">Entrez le contenu du blog post :</label>
									<textarea class="form-control col-md" name="content" id="content_id" rows="10" required></textarea>

								</div>
								<div class="form-group mb-3 text-center"><input class=" btn btn-primary btn-block px-5" type="submit" value="publier"></div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}
