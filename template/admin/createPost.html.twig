{% extends "layout.html.twig" %}

{% block content %}


	<div class="container">
        {% include "composant/error.html.twig" %}
		{% if post %}
			<h2>{{post.title}} créer!</h2>
			<p>
				voulez vous créer un nouveau post</p>
		{% endif %}
		<div class="card o-hidden border-0 shadow-lg my-5 rounded-4">
			<div class="card-body p-0">
				<div class="row">
					<div class="col">
						<div class="p-5">
							<div class="text-center">
								<h1 class="h4 text-gray-900 mb-4">Create a new Post!</h1>
							</div>
							<form action="" method="post" class="form-post">
								<input type="hidden" name="csrfToken" value="{{ csrfToken }}">
								<div class="form-group mb-3 ">
									<input class="form-control col-md" type="text" name="title" id="title" required placeholder="entrez le titre! (6 charactère minimum)">
									<div id="titlehelp" class="form-text ps-2">le titre doit faire 6 charactère minimum</div>
								</div>
								<div class="form-group mb-3">
									<input class="form-control col-md" type="text" name="excerpt" id="excerpt" length="50" placeholder="entrez un résumé de l'article">
									<div id="titlehelp" class="form-text ps-2">si vous ne rentrez pas de résumé le résumé sera les 50 premier charactère de l'article</div>
								</div>
								<div class="form-group mb-3">
									<label class="form-label " for"content">Entrez le contenu du blog post :
										<span class="text-muted">(50 charactère minimum)</span>
									</label>
									<textarea class="form-control col-md" name="content" id="content_id" rows="10" required></textarea>

								</div>
								<div class="form-group mb-3 text-center"><input class=" btn btn-primary btn-block px-5" type="submit" value="publier"></div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}
